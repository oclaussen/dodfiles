{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "expandWorkspaceToModule": false,
        "env": {
          "CGO_ENABLED": "0"
        }
      }
    },
    "terraform": {
      "command": "terraform-lsp"
    }
  }
}
